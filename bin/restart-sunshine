#!/bin/sh

systemctl --user stop sunshine || exit 1

# Kill any potentially symlinks
rm -f "${HOME}/.config/sunshine/sunshine_keyboard" || exit 1
rm -f "${HOME}/.config/sunshine/sunshine_mouse" || exit 1
rm -f "${HOME}/.config/sunshine/sunshine_touchscreen" || exit 1

systemctl --user restart sunshine || exit 1
exit 0
