#!/bin/sh

#!/bin/sh

readonly dev_root="${HOME}/devel"
readonly project_root="${dev_root}/project/pyamsoft/js"

# Local scripts
path="${HOME}/.local/bin"

readonly path

jail --name webstorm /usr/bin/webstorm \
  --setenv PATH "${path}:${PATH}" \
  --setenv JAVA_HOME "/opt/webstorm/jbr/" \
  --bind "${project_root}" "${project_root}" \
  -- "$@"

exit 0
