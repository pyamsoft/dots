# shellcheck shell=sh

# MacOS doesn't have /usr/local/sbin by default.
# If we made it, add it
if [ -d "/usr/local/sbin" ]; then
  PATH="/usr/local/sbin:${PATH}"
fi

# Export the PATH
export PATH

# Set up path
if [ -z "${PYAMSOFT_PATH}" ]; then
  PYAMSOFT_PATH="local-sbin"
else
  PYAMSOFT_PATH="local-sbin:${PYAMSOFT_PATH}"
fi

return 0
