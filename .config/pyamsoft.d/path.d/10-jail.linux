# shellcheck shell=bash

# Jail scrips
if command -v jail >/dev/null; then
  if [ -d "${HOME}/.jail/bin" ]; then
    PATH="${HOME}/.jail/bin:${PATH}"

    # Set up path
    if [ -z "${PYAMSOFT_PATH}" ]; then
      PYAMSOFT_PATH="jail-bin"
    else
      PYAMSOFT_PATH="jail-bin:${PYAMSOFT_PATH}"
    fi
  fi
fi

# Export the PATH
export PATH

return 0

