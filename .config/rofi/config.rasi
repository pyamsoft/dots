configuration {
  modi: "run,drun";
  fixed-num-lines: true;
  show-icons: true;
  threads: 4;
  icon-theme: "Papirus";
  disable-history: true;
  drun-use-desktop-cache: true;

  timeout {
      action: "kb-cancel";
      delay:  0;
  }

  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "rounded-catppuccin-mocha"
