set input-meta on
set output-meta on
set bell-style none
set horizontal-scroll-mode off
set echo-control-characters on
set show-mode-in-prompt off
set editing-mode emacs
set colored-stats on
set show-all-if-ambiguous off
set show-all-if-unmodified off
set completion-ignore-case on
set skip-completed-text on
set mark-directories on
set mark-symlinked-directories on
set match-hidden-files off

# Re-source inputrc (ALT + r)
"\er": re-read-init-file

# Clear (space prefixed won't be saved by bash history)
"\C-l": "\C-k\C-u clear"

# Send EOF
"\C-d": end-of-file

# Autocomplete binds
"\C-n": menu-complete
"\C-p": menu-complete-backward

# Line binds
"\eb": beginning-of-line
"\ee": end-of-line

# Keybinds (ALT + key)
"\es": "sudo "
"\el": "ls -l "
"\ec": "cd "
"\em": "man "
"\ep": 'if [ "$(uname)" = "Darwin" ]; then brew update && brew upgrade && brew upgrade --greedy; else paru -Syu --removemake --devel && sudo flatpak update; fi && if command -v checkupd-containers >/dev/null; then checkupd-containers; fi;'
