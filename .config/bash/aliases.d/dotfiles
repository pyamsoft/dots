# shellcheck shell=bash

# git lg setup:
# git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

alias dotfiles='git --git-dir "${HOME}"/.dotfiles --work-tree "${HOME}"'

alias dots="dotfiles status"
alias dota="dotfiles add"
alias dotc="dotfiles commit"
alias dotd="dotfiles diff"
alias dotm="dotfiles merge"
alias dotck="dotfiles checkout"
alias dotb="dotfiles branch"
alias dotpl="dotfiles pull"
alias dotf="dotfiles fetch"
alias dotps="dotfiles push"
alias dotl="dotfiles lg"

