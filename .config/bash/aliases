# shellcheck shell=bash

for script in "${HOME}"/.bash_aliases.d/*; do
  # shellcheck disable=SC1090
  [ -r "${script}" ] && . "${script}"
done
unset script

for script in "${XDG_CONFIG_HOME}"/bash/aliases.d/*; do
  # shellcheck disable=SC1090
  [ -r "${script}" ] && . "${script}"
done
unset script

