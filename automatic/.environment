# If we have already been sourced, exit out
if [ -n "${PYAMSOFT_ENVIRONMENT}" ]; then
  exit 0
fi

# Add user bin to path
export SYSTEM_DEFAULT_PATH="${PATH}"

# Add user path, wrap bin priority over local bin over home bin
PATH="${HOME}/bin:${PATH}"
PATH="${HOME}/.local/bin:${PATH}"
PATH="${HOME}/.bww/bin:${PATH}"
PATH="${HOME}/.flatpak/bin:${PATH}"
export PATH

# On VNC sessions, PATH is sometimes re-written. How weird.
# See .bashrc for application of PYAMSOFT_PATH
if [ -z "${PYAMSOFT_PATH}" ]; then
  export PYAMSOFT_PATH="${PATH}"
fi

# Define XDG directories
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="${HOME}/.cache"

# libstrangle
# Set fps_max and threaded optimizations
export FPS=90
export TOPT=1

# Wine with esync
# https://github.com/zfigura/wine/blob/esync/README.esync
export WINEDEBUG=-all
export WINEESYNC=1

# Launch an ssh-agent the entire user session
# Your DE may launch ssh agents for you - be sure you are not doubling up!
if [ -z "${SSH_AUTH_SOCK}" ]; then
  eval "$(ssh-agent -s)"
fi

# Mark environment as set up
export PYAMSOFT_ENVIRONMENT=1

