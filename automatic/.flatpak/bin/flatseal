#!/bin/sh

# Flatseal can't "just be run" because it symlinks xdg-data/flatpak/overrides
# which, on this system, is already a symlink.
#
# This will work the first, and only the first time.
#
# As such, we must delete the folder and then continue

##
# Very danger!
delete_data() {
  rm -rf "${HOME}"/.var/app/com.github.tchx84.Flatseal
}

main()
{
  delete_data || return 1
  com.github.tchx84.Flatseal "$@" || return 1
  delete_data || return 1
  return 0
}

main "$@" || exit 1
exit 0
