#!/bin/sh

# This file is autogenerated by bwrapper, modifications may be
# overwritten by the script.

# This script expects the 'bww' script to be available to the user somewhere
# on the $PATH. It will fail if the situation proves otherwise.

# Real /dev for ADB
# Bind Android storage directory
# Add android tools to path
# Switch 0 to 1 to use system libs for emulator
readonly ANDROID_STORAGE="/storage/pyamsoft/devel/android"
readonly arguments="--nodev --bind-if-exists ${ANDROID_STORAGE} --setenv PATH ${ANDROID_STORAGE}/sdk/emulator:${ANDROID_STORAGE}/sdk/cmdline-tools/latest/bin:${ANDROID_STORAGE}/sdk/platform-tools:${PATH} --setenv ANDROID_EMULATOR_USE_SYSTEM_LIBS 0"
readonly command_name="android-studio"

if [ "$1" = "--" ]; then
  # Stop bww argument parsing (in case the command you want to run is actually called "shell")
  # To pass a '--' argument to the wrapped program, you must pass -- again so
  #
  # $ my_program -A -B -C -- x y z      =>
  # $ my_program -- -A -B -C -- x y z
  shift

  # shellcheck disable=SC2086
  exec bww $arguments "${command_name}" "$@"
elif [ "$1" = "shell" ]; then
  # Launch a shell in the environment
  shift

  # No extra arguments for shells

  # shellcheck disable=SC2086
  exec bww $arguments --shell "${command_name}"
else
  # shellcheck disable=SC2086
  exec bww $arguments "${command_name}" "$@"
fi
