#!/bin/sh

readonly pak="org.ferdium.Ferdium"

cmd=""
if [ "$1" = "--shell" ]; then
  cmd="${cmd} --shell"
  shift
fi
readonly cmd

# Run as wayland if we are
_args=""
if [ -n "${WAYLAND_DISPLAY}" ]; then
  _args="--ozone-platform-hint=auto --enable-features=UseSkiaRenderer,WaylandWindowDecorations,WebRTCPipeWireCapturer"
fi
readonly _args

# shellcheck disable=SC2086
exec flatpak-env ${cmd} "${pak}" -- "$@" ${_args} || exit 1
exit 0


