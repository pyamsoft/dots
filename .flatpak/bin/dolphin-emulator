#!/bin/sh

self="$(id -un)"
readonly self

readonly pak="org.DolphinEmu.dolphin-emu"
readonly def_path="/app/bin:/usr/bin"
readonly path="${HOME}/.local/bin"

cmd=""
if [ "$1" = "--shell" ]; then
  cmd="${cmd} --shell"
  shift
fi
readonly cmd

# shellcheck disable=SC2086
exec flatpak-env ${cmd} "${pak}" \
  --with-env PATH "${path}:" "${def_path}" \
  --filesystem="/home/${self}/games/dolphin" \
  --filesystem="/storage/${self}/games/dolphin" \
  --filesystem="/storage/${self}/games2/dolphin" \
  "$@" || exit 1
exit 0
