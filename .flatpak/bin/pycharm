#!/bin/sh

readonly pak="com.jetbrains.PyCharm-Community"

self="$(id -un)"
readonly self

cmd=""
if [ "$1" = "--shell" ]; then
  cmd="${cmd} --shell"
  shift
fi
readonly cmd

# shellcheck disable=SC2086
exec flatpak-env ${cmd} "${pak}" \
  --filesystem="/storage/${self}/devel/project" \
  "$@" || exit 1
exit 0
