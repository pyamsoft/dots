#!/bin/sh

readonly pak="com.jetbrains.WebStorm"

_args=""
while [ -n "$1" ]; do
  case "$1" in
    --shell)
      _args="${_args} --command=/bin/sh"
      shift
      ;;
    --offline)
      _args="${_args} --unshare=network"
      shift
      ;;
    *)
      break
      ;;
  esac
done
readonly _args

# shellcheck disable=SC2086
exec flatpak-env "${pak}" \
  --filesystem="${HOME}/devel/project" \
  --env="FLATPAK_ENABLE_SDK_EXT=node20" \
  ${_args} \
  -- "$@" || exit 1
exit 0
