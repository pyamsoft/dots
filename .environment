# shellcheck shell=sh

# If we have already been sourced, exit out
if [ -n "${PYAMSOFT_ENVIRONMENT}" ]; then
  return 0
fi

os="$(uname)"

for script in "${HOME}"/.environment.d/*; do
  # shellcheck disable=SC1090
  [ -r "${script}" ] && {
    case "${script}" in
      *.linux)
        if [ "${os}" = "Linux" ]; then
          . "${script}"
        fi
        ;;
      *.macos)
        if [ "${os}" = "Darwin" ]; then
          . "${script}"
        fi
        ;;
      *)
        . "${script}"
        ;;
    esac
  }
  unset script
done
unset script

unset os
