[Unit]
Description=Crowdsec container
After=docker.service tailscaled.service mullvad-vpn.service firewalld.service 
Wants=docker.service tailscaled.service mullvad-vpn.service firewalld.service

[Service]
ExecStart=/bin/sh -c '_c="crowdsec"; podman stop "$${_c}"; podman rm "$${_c}"; /usr/local/bin/"$${_c}"'
ExecStop=/bin/sh -c '_c="crowdsec"; podman stop "$${_c}"; podman rm "$${_c}"; exit 0'

[Install]
WantedBy=network-online.target
