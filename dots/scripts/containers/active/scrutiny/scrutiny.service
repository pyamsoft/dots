# Manage Scrutiny in a container

[Unit]
Description=Scrutiny container
After=network-online.target docker.service podman.service scrutiny.service
Wants=network-online.target
RequiresMountsFor=%t/containers

[Service]
ExecStartPre=-/bin/sh -c '_c="scrutiny"; podman stop -t 5 "$${_c}"; podman rm -f "$${_c}"'
ExecStart=/bin/sh -c '_c="scrutiny"; /usr/local/bin/"$${_c}"'
ExecStop=/bin/sh -c '_c="scrutiny"; podman stop -t 5 "$${_c}"; podman rm -f "$${_c}"'

[Install]
WantedBy=multi-user.target
