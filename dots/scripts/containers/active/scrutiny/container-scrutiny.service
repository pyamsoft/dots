# Manage Scrutiny in a container

[Unit]
Description=Container: Scrutiny
After=network-online.target docker.service podman.service scrutiny.service
Wants=network-online.target
RequiresMountsFor=%t/containers

[Service]
ExecStartPre=-/bin/sh -c '_c="scrutiny"; container-teardown "$${_c}"'
ExecStart=/bin/sh -c '_c="scrutiny"; /usr/local/bin/"$${_c}"'
ExecStop=/bin/sh -c '_c="scrutiny"; container-teardown "$${_c}"'

[Install]
WantedBy=multi-user.target
