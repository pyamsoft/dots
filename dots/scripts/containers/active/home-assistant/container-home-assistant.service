# HomeAssistant container

[Unit]
Description=Container: Home Assistant
After=network-online.target docker.service podman.service
Wants=network-online.target
RequiresMountsFor=%t/containers

[Service]
ExecStartPre=-/bin/sh -c 'sleep 2; container-teardown home-assistant'
ExecStart=/bin/sh -c '/usr/local/bin/home-assistant'
ExecStop=/bin/sh -c 'container-teardown home-assistant'

[Install]
WantedBy=multi-user.target
