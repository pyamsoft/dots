# Manage Crowdsec in a container

[Unit]
Description=Container: Crowdsec
After=network-online.target syslog.target remote-fs.target nss-lookup.target podman.service docker.service
Wants=network-online.target
RequiresMountsFor=%t/containers

[Service]
ExecStartPre=-/bin/sh -c 'sleep 2; container-teardown crowdsec'
ExecStart=/bin/sh -c '/usr/local/bin/crowdsec'
ExecStop=/bin/sh -c 'container-teardown crowdsec'
Restart=always
RestartSec=10

[Install]
WantedBy=network-online.target
