#!/bin/sh

readonly _name="home-assistant"
readonly _image="ghcr.io/linuxserver/homeassistant"
readonly _tag="2025.12.5"

_log() {
  _msg="$1"
  shift

  printf -- "[%s]: ${_msg}\n" "${_name}" "$@" || return 1

  unset _msg
  return 0
}

# Use podman, don't use docker
if command -v podman >/dev/null; then
  _cmd="podman"
elif command -v docker >/dev/null; then
  _cmd="docker"
else
  _log 'Requires either "podman" or "docker" ("podman" preferred)'
  exit 1
fi
readonly _cmd

readonly CONTAINER_RUNTIME_DIR="${HOME}/.local/etc/containers"

_prep_mounts() {
  readonly _mount1="${CONTAINER_RUNTIME_DIR}/${_name}/config"
  readonly _mount2="${CONTAINER_RUNTIME_DIR}/${_name}/data"

  mkdir -p "${_mount1}" || {
    _log "Failed to create mount source %s" "${_mount1}"
    return 1
  }
  mkdir -p "${_mount2}" || {
    _log "Failed to create mount source %s" "${_mount2}"
    return 1
  }

  _mounts=""
  _mounts="${_mounts} --mount type=bind,source=${_mount1},target=/config"
  _mounts="${_mounts} --mount type=bind,source=${_mount2},target=/data"

  # DBUS access for bluetooth
  _mounts="${_mounts} --mount type=bind,source=/run/dbus,target=/run/dbus,ro"

  readonly _mounts
  return 0
}

_prep_env() {
  _env=""

  readonly _env
  return 0
}

_prep_network() {
  _network=""

  # Host networking for SSDP and mDNS
  _network="${_network} --network=host"

  readonly _network
  return 0
}

_prep_log() {
  _logs=""
  # On Linux, our user session executes from systemd and thus sets the systemd vars
  # like JOURNAL_STREAM and INVOCATION_ID
  #
  # We cannot reliably use them to sniff "am I being ran by systemd"
  #
  # As such our services set a special PYAM_SYSTEMD variable and we sniff that
  if [ "$(uname)" = "Linux" ] && [ -n "${PYAM_SYSTEMD}" ]; then
    if [ "${_cmd}" = "podman" ]; then
      _logs="${_logs} --log-driver json-file"
    fi
  else
    _logs="${_logs} -i -t"
  fi

  readonly _logs
  return 0
}

_prep_caps() {
  _caps=""

  # Needed for s6
  _caps="${_caps} --cap-add DAC_OVERRIDE"
  _caps="${_caps} --cap-add CHOWN"
  _caps="${_caps} --cap-add SETGID"
  _caps="${_caps} --cap-add SETUID"

  # For bluetooth
  _caps="${_caps} --cap-add NET_RAW"
  _caps="${_caps} --cap-add NET_ADMIN"

  readonly _caps
  return 0
}

_prep_ports() {
  _ports=""

  readonly _ports
  return 0
}

_check_user() {
  if [ "$(id -u)" -eq 0 ]; then
    _log 'You must run this as a rootless container'
    return 1
  fi

  # Ok so what the hell is this
  # well, we need keep-id to use bluetooth in the container
  # but we also need s6 to run as root, so we declare the main user as root
  _userns="-e PUID=$(id -u) -e PGID=$(id -g) --user=0:0"
  if [ "${_cmd}" = "podman" ]; then
    # Need this userns option that is podman specific or we have random OCI permission error
    _userns="${_userns} --userns keep-id"
  fi
  readonly _userns

  return 0
}

_containerize() {
  _ha=""

  # Source the runtime config (so we don't have to hardcode keys)
  _runconf="${CONTAINER_RUNTIME_DIR}/${_name}/runconfig.env"
  if [ ! -e "${_runconf}" ]; then
    _log 'You must provide %s' "${_runconf}"
    return 1
  fi

  # Source the file into the environment
  # shellcheck disable=SC1090
  . "${_runconf}" || {
    _log 'Unable to source runconfig %s' "${_runconf}"
    return 1
  }
  unset _runconf
  readonly _ha

  # Log the commands we use next
  # Fail on errors
  # Fail on unassigned
  set -xeu

  # Don't quote so that if user is empty it still expands
  #
  # Instead of running with privileged, you should pass devices in
  # via runconfig
  #
  # shellcheck disable=SC2086
  exec ${_cmd} run --rm \
    --name "${_name}" --hostname "${_name}" \
    --security-opt no-new-privileges:true --cap-drop ALL \
    ${_ha} \
    ${_network} \
    ${_logs} \
    ${_env} \
    ${_mounts} \
    ${_ports} \
    ${_caps} \
    ${_userns} \
    "${_image}:${_tag}" "$@"
}

main() {
  _check_user || return 1
  _prep_mounts || return 1
  _prep_ports || return 1
  _prep_caps || return 1
  _prep_env || return 1
  _prep_network || return 1
  _prep_log || return 1

  # Launch the containers runtime
  "${_cmd}" --version >/dev/null 2>&1 || {
    _log 'Unable to check %s version.' "${_cmd}"
    return 1
  }

  # Wait for the root /run/podman folder to be available before launching
  # This folder is created "at some point" in response to podman commands being run
  if [ "$(uname)" = "Linux" ] && [ "${_cmd}" = "podman" ]; then
    while [ ! -d "${XDG_RUNTIME_DIR}/containers" ]; do
      sleep 1 || {
        _log 'Cancelled while waiting for container runtime to stand up.'
        return 1
      }
    done
    _log 'Container runtime is ready, start %s' "${_name}"
  fi

  _containerize "$@" || return 1
  return 0
}

main "$@" || exit 1
exit 0
