#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="mosquitto"
IMAGE="docker.io/library/eclipse-mosquitto"
TAG="2.0.22"

CONTAINER_MEMORY_LIMIT="64M"
CONTAINER_REQUIRE_RUNCONF=0

_prep_mounts() {
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/config" "/mosquitto/config" || return 1
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/data" "/mosquitto/data" || return 1
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/log" "/mosquitto/log" || return 1

  return 0
}

_prep_caps() {
  # Needed for s6
  _add_caps "--cap-add DAC_OVERRIDE"
  _add_caps "--cap-add CHOWN"
  _add_caps "--cap-add SETGID"
  _add_caps "--cap-add SETUID"
  return 0
}

_prep_ports() {
  _add_ports "-p 127.0.0.1:1883:1883/tcp"
  _add_ports "-p 127.0.0.1:9001:9001/tcp"
  return 0
}

_prep_env() {
  return 0
}

_prep_network() {
  CONTAINER_NETWORK_HOST_ROUTE=0

  # Piggyback onto the home-assistant network
  _add_network "--network=container:home-assistant"
  return 0
}

_check_user() {
  _require_nonroot || return 1

  # Run as root for s6
  _add_userns "--user=0:0"

  return 0
}

main "$@" || exit 1
exit 0
