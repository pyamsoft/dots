#!/bin/sh

readonly _name="unmanic"
readonly _image="docker.io/josh5/unmanic"
readonly _tag="0.3.0"

_log() {
  _msg="$1"
  shift

  printf -- "[%s]: ${_msg}\n" "${_name}" "$@" || return 1

  unset _msg
  return 0
}

# Use podman, don't use docker
if command -v podman >/dev/null; then
  _cmd="podman"
elif command -v docker >/dev/null; then
  _cmd="docker"
else
  _log 'Requires either "podman" or "docker" ("podman" preferred)'
  exit 1
fi
readonly _cmd

readonly CONTAINER_RUNTIME_DIR="${HOME}/.local/etc/containers"

_prep_mounts() {
  readonly _mount1="${CONTAINER_RUNTIME_DIR}/${_name}/cache"
  readonly _mount2="${CONTAINER_RUNTIME_DIR}/${_name}/config"
  readonly _mount3="${CONTAINER_RUNTIME_DIR}/${_name}/media"

  mkdir -p "${_mount1}" || {
    _log "Failed to create mount source %s" "${_mount1}"
    return 1
  }
  mkdir -p "${_mount2}" || {
    _log "Failed to create mount source %s" "${_mount2}"
    return 1
  }

  # Media folders are optionally symlinks to another mass storage drive
  mkdir -p "${_mount3}"

  _mounts=""
  _mounts="${_mounts} --mount type=bind,source=${_mount1},target=/tmp/unmanic"
  _mounts="${_mounts} --mount type=bind,source=${_mount2},target=/config"

  # Follow the link and mount the media folder ONLY if it is valid
  if [ -d "$(realpath "${_mount3}")" ]; then
    _mounts="${_mounts} --mount type=bind,source=${_mount3},target=/library"
  fi

  readonly _mounts
  return 0
}

_prep_env() {
  _env=""

  # Needed for GPU rendering
  _env="${_env} --group-add=$(_get_gid_for_group "render")"
  _env="${_env} --group-add=$(_get_gid_for_group "video")"

  readonly _env
  return 0
}

_prep_network() {
  _network=""

  # We use our container DNS resolver
  # MacOS can't launch with host-gateway
  _network="${_network} --add-host localhost:127.0.0.1 --dns-search=."
  _network="${_network} --add-host host.containers.internal:host-gateway"

  # Create our own network
  if [ "${_cmd}" = "podman" ]; then
    # Podman can "ignore" networks with the same name
    "${_cmd}" network create --ignore --driver bridge --opt isolate=true --disable-dns -- "${_name}" >/dev/null || {
      _log "Failed to create isolated network using %s" "${_cmd}"
      return 1
    }
  else
    # Docker must make sure the network doesn't already exist
    if ! "${_cmd}" network ls --format '{{.Name}}' | grep -q "${_name}"; then
      "${_cmd}" network create --driver bridge --opt com.docker.network.bridge.enable_icc=false -- "${_name}" >/dev/null || {
        _log "Failed to create isolated network using %s" "${_cmd}"
        return 1
      }
    fi
  fi

  # Attach our isolated network
  _network="${_network} --network=${_name}"

  readonly _network
  return 0
}

_prep_log() {
  _logs=""
  # On Linux, our user session executes from systemd and thus sets the systemd vars
  # like JOURNAL_STREAM and INVOCATION_ID
  #
  # We cannot reliably use them to sniff "am I being ran by systemd"
  #
  # As such our services set a special PYAM_SYSTEMD variable and we sniff that
  if [ "$(uname)" = "Linux" ] && [ -n "${PYAM_SYSTEMD}" ]; then
    if [ "${_cmd}" = "podman" ]; then
      _logs="${_logs} --log-driver json-file"
    fi
  else
    _logs="${_logs} -i -t"
  fi

  readonly _logs
  return 0
}

_prep_caps() {
  _caps=""

  # s6-init uses chown and drops privilege
  _caps="${_caps} --cap-add CHOWN"
  _caps="${_caps} --cap-add SETGID"
  _caps="${_caps} --cap-add SETUID"

  # Needed to chown files during startup and execute start script
  _caps="${_caps} --cap-add DAC_OVERRIDE"
  _caps="${_caps} --cap-add FOWNER"

  readonly _caps
  return 0
}

_prep_ports() {
  _ports=""

  _ports="${_ports} -p 127.0.0.1:8888:8888/tcp"

  readonly _ports
  return 0
}

_check_user() {
  if [ "$(id -u)" -eq 0 ]; then
    _log 'You must run this as a rootless container'
    return 1
  fi

  # Run as root or else s6 wont work
  # Need this userns option that is podman specific or we have random OCI permission error
  # Then drop to PUID and PGID permission that owns the media folder
  # Only for podman
  if [ "${_cmd}" = "podman" ]; then
    _userns="--user=0:0 --userns keep-id -e PUID=$(id -u) -e PGID=$(id -g)"
  else
    _userns="--user=0:0 -e PUID=$(id -u) -e PGID=$(id -g)"
  fi
  readonly _userns

  return 0
}

_get_gid_for_group() {
  _grp="$1"
  _gid="$(getent group "${_grp}" | cut -d : -f 3)"

  printf -- '%s' "${_gid}"

  unset _grp
  unset _gid
  return 0
}

_containerize() {
  _um=""

  # Source the runtime config (so we don't have to hardcode keys)
  _runconf="${CONTAINER_RUNTIME_DIR}/${_name}/runconfig.env"
  if [ ! -e "${_runconf}" ]; then
    _log 'You must provide %s' "${_runconf}"
    return 1
  fi

  # Source the file into the environment
  # shellcheck disable=SC1090
  . "${_runconf}" || {
    _log 'Unable to source %s' "${_runconf}"
    return 1
  }
  unset _runconf
  readonly _um

  # Log the commands we use next
  # Fail on errors
  # Fail on unassigned
  set -xeu

  # Don't quote so that if user is empty it still expands
  #
  # shellcheck disable=SC2086
  exec ${_cmd} run --rm \
    --name "${_name}" --hostname "${_name}" \
    --security-opt no-new-privileges:true --cap-drop ALL \
    --device "/dev/dri:/dev/dri" \
    ${_um} \
    ${_network} \
    ${_env} \
    ${_logs} \
    ${_mounts} \
    ${_ports} \
    ${_caps} \
    ${_userns} \
    "${_image}:${_tag}" "$@"
}

main() {
  _check_user || return 1
  _prep_mounts || return 1
  _prep_ports || return 1
  _prep_caps || return 1
  _prep_env || return 1
  _prep_network || return 1
  _prep_log || return 1

  "${_cmd}" --version >/dev/null 2>&1 || {
    _log 'Unable to check %s version.' "${_cmd}"
    return 1
  }

  # Wait for the ${XDG_RUNTIME_DIR}/podman folder to be available before launching
  # This folder is created "at some point" in response to podman commands being run
  if [ "$(uname)" = "Linux" ] && [ "${_cmd}" = "podman" ]; then
    while [ ! -d "${XDG_RUNTIME_DIR}/containers" ]; do
      sleep 1 || {
        _log 'Cancelled while waiting for container runtime to stand up.'
        return 1
      }
    done
    _log 'Container runtime is ready, start %s' "${_name}"
  fi

  _containerize "$@" || return 1
  return 0
}

main "$@" || exit 1
exit 0
