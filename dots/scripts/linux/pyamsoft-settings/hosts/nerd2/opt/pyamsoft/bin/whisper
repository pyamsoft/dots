#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="whisper"
IMAGE="docker.io/homeassistant/amd64-addon-whisper"
TAG="3.0.1"

CONTAINER_MEMORY_LIMIT="2G"
CONTAINER_REQUIRE_RUNCONF=0
CONTAINER_REQUIRE_INIT=1
CONTAINER_ENTRYPOINT="python3"

# Allow model customization via variable or fallback to medium-int8
MODEL="${MODEL:-medium-int8}"

_prep_mounts() {
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/data" "/data" || return 1
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/download" "/download" || return 1
  return 0
}

_prep_env() {
  return 0
}

_prep_network() {
  CONTAINER_NETWORK_HOST_ROUTE=0

  # Piggyback onto the home-assistant network
  _add_network --network="container:home-assistant"
  return 0
}

_prep_caps() {
  return 0
}

_prep_ports() {
  _add_ports -p "127.0.0.1:10300:10300/tcp"
  return 0
}

_check_user() {
  _require_nonroot || return 1

  return 0
}

_finalize() {
  # Wake word command
  _add_args -m "wyoming_faster_whisper"
  _add_args --uri "tcp://0.0.0.0:10300"
  _add_args --model "${MODEL}"
  _add_args --beam-size 1
  _add_args --compute-type "int8"
  _add_args --language "en"
  _add_args --data-dir "/data"
  _add_args --download-dir "/download"
  return 0
}

main "$@" || exit 1
exit 0
