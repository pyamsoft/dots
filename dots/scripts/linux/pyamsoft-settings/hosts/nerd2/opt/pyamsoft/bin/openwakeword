#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="openwakeword"
IMAGE="docker.io/homeassistant/amd64-addon-openwakeword"
TAG="2.1.0"

CONTAINER_REQUIRE_RUNCONF=0
CONTAINER_REQUIRE_INIT=1
CONTAINER_ENTRYPOINT="python3"

# Allow model customization via variable or fallback to "Hey Jarvis"
MODEL="${MODEL:-hey_jarvis}"

_prep_mounts() {
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/models" "/custom-model" || return 1

  return 0
}

_prep_caps() {
  return 0
}

_prep_ports() {
  _add_ports "-p 127.0.0.1:10400:10400/tcp"
  return 0
}

_prep_env() {
  return 0
}

_prep_network() {
  CONTAINER_NETWORK_HOST_ROUTE=0

  # Piggyback onto the home-assistant network
  _add_network "--network=container:home-assistant"
  return 0
}

_check_user() {
  _require_nonroot || return 1

  return 0
}

_finalize() {
  # Wake word command
  _add_args "-m wyoming_openwakeword"
  _add_args "--uri tcp://0.0.0.0:10400"
  _add_args "--preload-model ${MODEL}"
  _add_args "--custom-model-dir /custom-model"
  return 0
}

main "$@" || exit 1
exit 0
