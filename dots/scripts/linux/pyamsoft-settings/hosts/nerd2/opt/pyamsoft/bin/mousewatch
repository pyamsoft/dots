#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="mousewatch"
IMAGE="localhost/pyamsoft/mousewatch"
TAG="latest"

CONTAINER_REQUIRE_INIT=1

_prep_mounts() {
  return 0
}

_prep_env() {
  return 0
}

_prep_network() {
  _network_isolate || return 1
  return 0
}

_prep_caps() {
  return 0
}

_prep_ports() {
  return 0
}

_check_user() {
  if [ "$(id -u)" -eq 0 ]; then
    _log 'You must run this as a rootless container'
    return 1
  fi

  return 0
}

main "$@" || exit 1
exit 0
