#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="httpie"
IMAGE="docker.io/alpine/httpie"
TAG="3.2.4"

_prep_mounts() {
  return 0
}

_prep_caps() {
  return 0
}

_prep_ports() {
  return 0
}

_prep_env() {
  _env=""
  return 0
}

_prep_network() {
  # We use host networking since we may want to test services running on our local machine
  CONTAINER_NETWORK="${CONTAINER_NETWORK} --network=host"
  return 0
}

_check_user() {
  if [ "$(id -u)" -eq 0 ]; then
    _log 'You must run this as a rootless container'
    return 1
  fi

  return 0
}

main "$@" || exit 1
exit 0
