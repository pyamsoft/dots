#!/bin/sh

_PROG_NAME="$(basename "$0")"
readonly _PROG_NAME

_log() {
  _msg="$1"
  shift

  printf -- "[%s]: ${_msg}\n" "${_PROG_NAME}" "$@" || return 1

  unset _msg
  return 0
}

##
# Log a message to stderr
_elog() {
  _log "$@" 1>&2 || return 1
  return 0
}

_check() {
  # Try curl first (silence if curl is not present in the image)
  podman exec "$1" curl -s "$2" 2>/dev/null && return 0

  # Try wget if the curl check fails (maybe curl is not present) (silent if wget is not present in the image)
  podman exec "$1" wget -q -O - "$2" 2>/dev/null && return 0

  # Otherwise we have no way of checking, fail
  return 1
}

_check_mullvad() {
  _vpn_output="$(_check "$1" "https://am.i.mullvad.net/json")" || {
    _elog 'Failed to check container (%s) VPN status for Mullvad VPN' "$1"
    return 1
  }

  if printf -- '%s' "${_vpn_output}" | grep -q '"mullvad_exit_ip":true'; then
    unset _vpn_output
    return 0
  fi

  _elog 'Container (%s) IS NOT CONNECTED to Mullvad VPN!' "$1"
  unset _vpn_output

  return 1
}

_check_airvpn() {
  _vpn_output="$(_check "$1" "https://airvpn.org/api/whatismyip/")" || {
    _elog 'Failed to check container (%s) VPN status for AirVPN' "${_PROG_NAME}" "$1"
    return 1
  }

  if printf -- '%s' "${_vpn_output}" | grep -q '"airvpn": true,'; then
    unset _vpn_output
    return 0
  fi

  _elog 'Container (%s) IS NOT CONNECTED to AirVPN!' "$1"
  unset _vpn_output

  return 1
}

main() {
  _vpn="$1"
  case "${_vpn}" in
  --mullvad | --airvpn)
    shift
    ;;
  *)
    _elog 'You must specify either "--mullvad" or "--airvpn"'
    return 1
    ;;
  esac

  if [ -z "$1" ]; then
    _elog 'You must specify a container'
    return 1
  fi

  for _c in "$@"; do
    if [ "${_vpn}" = "--mullvad" ]; then
      _check_mullvad "${_c}" || return 1
    elif [ "${_vpn}" = "--airvpn" ]; then
      _check_airvpn "${_c}" || return 1
    else
      _elog 'Unsupported VPN checker backend: %s' "${_vpn}"
      return 1
    fi
    unset _c
  done

  unset _c
  return 0
}

main "$@" || exit 1
exit 0
