#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="bentopdf"
IMAGE="ghcr.io/alam00000/bentopdf"
TAG="v2.3.1"

CONTAINER_REQUIRE_RUNCONF=0

_prep_mounts() {
  return 0
}

_prep_caps() {
  return 0
}

_prep_env() {
  return 0
}

_prep_network() {
  _network_isolate || return 1
  return 0
}

_prep_ports() {
  _add_ports -p "127.0.0.1:9080:8080/tcp"
  return 0
}

_check_user() {
  _require_nonroot || return 1

  if _is_podman; then
    _add_userns --userns keep-id
  fi

  return 0
}

main "$@" || exit 1
exit 0
