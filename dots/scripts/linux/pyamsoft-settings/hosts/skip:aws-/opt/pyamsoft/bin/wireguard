#!/bin/sh

# Source our common library
. "/opt/pyamsoft/lib/container-launch"

NAME="wireguard"
IMAGE="docker.io/jordanpotter/wireguard"
TAG="2025-12-23"

CONTAINER_NETWORK_HOST_ROUTE=0

_prep_mounts() {
  _mount_bind "${CONTAINER_RUNTIME_DIR}/${NAME}/wg" "/etc/wireguard" || return 1

  # Bind kernel modules
  CONTAINER_MOUNTS="${CONTAINER_MOUNTS} --mount type=bind,source=/lib/modules,target=/lib/modules"

  readonly _mounts
  return 0
}

_prep_caps() {
  # For networking and iptables
  CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add NET_ADMIN"
  CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add NET_RAW"

  # Optional only if WG module isn't loaded
  CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add SYS_MODULE"

  # Needs this for file access and config writing
  # CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add CHOWN"
  # CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add DAC_OVERRIDE"
  # CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add SETGID"
  # CONTAINER_CAPS="${CONTAINER_CAPS} --cap-add SETUID"

  return 0
}

_prep_ports() {
  # Configure ports in the runconfig.env
  return 0
}

_prep_env() {
  CONTAINER_ENV="${CONTAINER_ENV} -e PUID=$(id -u)"
  CONTAINER_ENV="${CONTAINER_ENV} -e PGID=$(id -g)"
  return 0
}

_prep_network() {
  _network_isolate || return 1
  return 0
}

_check_user() {
  _require_nonroot || return 1

  return 0
}

_containerize() {
  # Log the commands we use next
  # Fail on errors
  # Fail on unassigned
  set -xeu

  # Don't quote so that if user is empty it still expands
  #
  # shellcheck disable=SC2086
  exec ${CONTAINER_CMD} run --rm \
    --name "${NAME}" --hostname "${NAME}" \
    --security-opt no-new-privileges:true --cap-drop ALL \
    --sysctl="net.ipv4.conf.all.src_valid_mark=1" \
    -e LOCAL_SUBNETS="${LOCAL_SUBNETS}" \
    ${CONTAINER_RC} \
    ${CONTAINER_LOGS} \
    ${CONTAINER_NETWORK} \
    ${CONTAINER_ENV} \
    ${CONTAINER_MOUNTS} \
    ${CONTAINER_PORTS} \
    ${CONTAINER_CAPS} \
    ${CONTAINER_USERNS} \
    "${IMAGE}:${TAG}" "$@"
}

main "$@" || exit 1
exit 0
